<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/announcement.css" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Dashboard</title>
</head>

<body>
    <%- include("./includes/flash.ejs") %>
        <div class="dashboard">
            <div class="main-content">
                <div class="header">
                    <h1>Dashboard</h1>
                    <div class="user-info">
                        <a href="/admin/logout" class="btn btn-danger ms-auto m-2">Logout</a>
                    </div>
                </div>

                <div class="cards">
                    <!-- Total Students -->
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3 class="card-title">Total Students</h3>
                            <div class="card-icon blue">
                                <i class="fas fa-user-graduate"></i>
                            </div>
                        </div>
                        <div class="card-value" id="totalStudents">--</div>
                        <div class="card-description">Registered Users</div>
                    </div>

                    <!-- Active Tests -->
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3 class="card-title">Active Tests</h3>
                            <div class="card-icon green">
                                <i class="fas fa-play-circle"></i>
                            </div>
                        </div>
                        <div class="card-value" id="activeTests">--</div>
                        <div class="card-description">Ongoing right now</div>
                    </div>

                    <!-- Completed Tests -->
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3 class="card-title">Completed Tests</h3>
                            <div class="card-icon red">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                        <div class="card-value" id="completedTests">--</div>
                        <div class="card-description">Already finished</div>
                    </div>

                    <!-- Upcoming Tests -->
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h3 class="card-title">Upcoming Tests</h3>
                            <div class="card-icon yellow">
                                <i class="fa-solid fa-calendar-days"></i>
                            </div>
                        </div>
                        <div class="card-value" id="upcomingTests">--</div>
                        <div class="card-description">Starting soon</div>
                    </div>
                </div>

                <div class="sections">
                    <div class="section">
                        <div class="section-header">
                            <h2 class="section-title">Announcements</h2>
                            <form method="GET" action="/announcement/new">
                                <button class="btn btn-primary" id="newAnnouncementBtn">
                                    <i class="fas fa-plus"></i> New Announcement
                                </button>
                            </form>
                        </div>
                        <ul class="announcement-list">
                            <% for(announcement of allAnnouncements){ %>
                                <li class="announcement-item">
                                    <div class="announcement-box position-relative">
                                        <div class="announcement-title">
                                            <%= announcement.title %>
                                        </div>
                                        <div class="announcement-date">
                                            Date: <%= announcement.date %>
                                        </div>
                                        <div class="announcement-body">
                                            <%- announcement.body %>
                                        </div>
                                        <div class="announcement-footer">
                                            Issued By: <%= announcement.issued_by %>
                                        </div>

                                        <div class="position-absolute bottom-0 end-0 p-3 d-flex gap-3">
                                            <form action="/announcement/<%= announcement._id %>" method="GET">
                                                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                                            </form>
                                            <form action="/announcement/<%= announcement._id %>?_method=DELETE"
                                                method="POST">
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </div>
                                </li>
                                <% } %>
                        </ul>
                        <hr>
                        <div class="container mt-4">
                            <form action="/download" method="POST" class="card p-4 shadow-sm">

                                <!-- Branch selection -->
                                <div class="mb-3">
                                    <label for="branch_name" class="form-label">Select Branch</label>
                                    <select class="form-select form-select-lg" id="branch_name" name="branch_name"
                                        required>
                                        <option value="" disabled selected>Select branch</option>
                                        <option value="lr">Logical Reasoning and Aptitude</option>
                                        <option value="ai">Artificial Intelligence</option>
                                        <option value="che">Chemical Engineering</option>
                                        <option value="chm">Chemistry</option>
                                        <option value="ce">Civil Engineering</option>
                                        <option value="cse">Computer Science and Engineering</option>
                                        <option value="ee">Electrical Engineering</option>
                                        <option value="ece">Electronics Engineering</option>
                                        <option value="hss">Humanities and Social Sciences</option>
                                        <option value="ms">Management Studies</option>
                                        <option value="math">Mathematics</option>
                                        <option value="me">Mechanical Engineering</option>
                                        <option value="phy">Physics</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="test_id" class="form-label">Select Test</label>
                                    <select class="form-select form-select-lg" id="test_id" name="test_id" required>

                                    </select>
                                </div>
                                <button type="submit" class="btn btn-success btn-md">
                                    <i class="fa fa-download me-2"></i> Download Result
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="section">

                        <div class="section-header">

                            <h2 class="section-title">Create New Test</h2>
                            <form method="GET" action="/test/new">
                                <button class="btn btn-primary" id="newAnnouncementBtn">
                                    <i class="fas fa-plus"></i> New Test
                                </button>
                            </form>
                        </div>


                        <!-- upload the questions -->

                        <ul class="announcement-list">
                            <% for(test of allTests){ %>

                                <% const dateObj=new Date(test.startTime); const
                                    date=dateObj.toLocaleDateString('en-GB', { day: 'numeric' , month: 'long' ,
                                    year: 'numeric' }); const time=dateObj.toLocaleTimeString('en-US', { hour: 'numeric'
                                    , minute: '2-digit' , hour12: true }).toLowerCase(); %>

                                    <li class="announcement-item">
                                        <div class="position-relative">
                                            <div class="card p-0">
                                                <div class="card-header">
                                                    <%= test.testName %>
                                                </div>
                                                <div class="card-body">
                                                    <p class="card-text"><b>Scheduled date :&MediumSpace;</b>
                                                        <%= date %>
                                                    </p>
                                                    <p class="card-text"><b>Scheduled time :&MediumSpace;</b>
                                                        <%= time %>
                                                    </p>
                                                    <p class="card-text"><b>Total questions :&MediumSpace;</b>
                                                        <%= test.numberOfQues %>
                                                    </p>
                                                    <p class="card-text"><b>Total marks :&MediumSpace;</b>
                                                        <%= test.totalMarks %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="position-absolute bottom-0 end-0 p-3 d-flex gap-3">
                                                <form action="/test/<%= test._id %>" method="GET">
                                                    <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                                                </form>
                                                <form action="/test/<%= test._id %>?_method=DELETE" method="POST">
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </div>
                                    </li>
                                    <% } %>
                        </ul>
                        <hr>
                        <div class="container mt-4">
                            <form action="/upload" method="POST" enctype="multipart/form-data"
                                class="card p-4 shadow-sm">

                                <!-- Branch selection -->
                                <div class="mb-3">
                                    <label for="branch" class="form-label">Select Branch</label>
                                    <select class="form-select form-select-lg" id="branch" name="branch" required>
                                        <option value="" disabled selected>Select branch</option>
                                        <option value="lr">Logical Reasoning and Aptitude</option>
                                        <option value="ai">Artificial Intelligence</option>
                                        <option value="che">Chemical Engineering</option>
                                        <option value="chm">Chemistry</option>
                                        <option value="ce">Civil Engineering</option>
                                        <option value="cse">Computer Science and Engineering</option>
                                        <option value="ee">Electrical Engineering</option>
                                        <option value="ece">Electronics Engineering</option>
                                        <option value="hss">Humanities and Social Sciences</option>
                                        <option value="ms">Management Studies</option>
                                        <option value="math">Mathematics</option>
                                        <option value="me">Mechanical Engineering</option>
                                        <option value="phy">Physics</option>
                                    </select>
                                </div>

                                <!-- File upload + button in one row -->
                                <div class="row g-3 align-items-center">
                                    <div class="col-md-8">
                                        <label for="file" class="form-label">Upload Excel File</label>
                                        <input class="form-control" type="file" id="file" name="file"
                                            accept=".xlsx,.xls" required>
                                    </div>
                                    <div class="col-md-4 d-grid">
                                        <label class="form-label invisible">Upload</label>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-md">
                                        <i class="fa fa-upload me-2"></i> Upload Questions
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section leaderboard-section mb-3">
                <div class="section-header">
                    <h2 class="section-title">Leaderboard</h2>

                    <div class="filter-container">
                        <select id="branchSelect">
                            <option value="lr" selected>Logical Reasoning</option>
                            <option value="ai">Artificial Intelligence</option>
                            <option value="che">Chemical Engineering</option>
                            <option value="chm">Chemistry</option>
                            <option value="ce">Civil Engineering</option>
                            <option value="cse">Computer Science & Engineering</option>
                            <option value="ee">Electrical Engineering</option>
                            <option value="ece">Electronics & Communication</option>
                            <option value="hss">Humanities & Social Sciences</option>
                            <option value="ms">Management Studies</option>
                            <option value="math">Mathematics</option>
                            <option value="me">Mechanical Engineering</option>
                            <option value="phy">Physics</option>
                        </select>

                        <select id="testSelect">
                            <option value="">Select Test</option>
                        </select>
                    </div>
                </div>

                <div class="table-container">
                    <table class="leaderboard-table">
                        <caption id="testCaption">Select a test to view leaderboard</caption>
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Name</th>
                                <th>Score</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="leaderboardBody">
                            <!-- Populated dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        </div>
        <footer class="custom-footer py-3">
            <div class="container text-center">
                <h6 class="text-white mb-3">Developed By</h6>

                <div class="d-flex justify-content-center gap-5 flex-wrap">

                    <!-- Jenil -->
                    <div class="dev-profile">
                        <span class="dev-name text-white">Jenil Prajapati</span>
                        <span class="social-links ms-2">
                            <a href="https://github.com/jenil1236" class="text-white mx-1"><i
                                    class="fab fa-github"></i></a>
                            <a href="https://www.linkedin.com/in/jenil-prajapati-b31505307/" class="text-white mx-1"><i
                                    class="fab fa-linkedin"></i></a>
                            <a href="#" class="text-white mx-1"><i class="fab fa-twitter"></i></a>
                        </span>
                    </div>

                    <!-- Vineet -->
                    <div class="dev-profile">
                        <span class="dev-name text-white">Vineet Gupta</span>
                        <span class="social-links ms-2">
                            <a href="https://github.com/Vineet-svnit" class="text-white mx-1"><i
                                    class="fab fa-github"></i></a>
                            <a href="https://www.linkedin.com/in/vineet-gupta-431396272/" class="text-white mx-1"><i
                                    class="fab fa-linkedin"></i></a>
                            <a href="#" class="text-white mx-1"><i class="fab fa-twitter"></i></a>
                        </span>
                    </div>

                </div>

                <p class="mt-3 mb-0 text-white-50 small">
                    &copy; <%= new Date().getFullYear() %> Career Development Cell. All rights reserved.
                </p>
            </div>
        </footer>

        <style>
            .custom-footer {
                background-color: #0d47a1;
                /* dark bluish */
                border-top: 2px solid rgba(255, 255, 255, 0.15);
                box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.25);
                width: 100%;
            }

            .custom-footer .dev-profile {
                font-size: 0.95rem;
            }

            .custom-footer .social-links a:hover {
                color: #90caf9;
            }
        </style>
        <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/js/dashboard.js"></script>
</body>

</html>